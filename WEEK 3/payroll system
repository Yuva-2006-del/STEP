// Assignment6_PayrollSystem.java

class Employee {
    String empId, empName;
    double baseSalary;
    boolean[] attendance = new boolean[30]; // true = present

    static int totalEmployees = 0;
    static String companyName = "TechCorp";

    Employee(String id, String name, double salary) {
        empId = id;
        empName = name;
        baseSalary = salary;
        totalEmployees++;
    }

    void markAttendance(int day, boolean present) {
        if (day >= 1 && day <= 30) attendance[day-1] = present;
    }

    double calculateSalary() {
        int daysPresent = 0;
        for (boolean d : attendance) if (d) daysPresent++;
        return (baseSalary / 30) * daysPresent;
    }

    void generatePaySlip() {
        System.out.println("\nPayslip for " + empName);
        System.out.println("ID: " + empId);
        System.out.println("Base Salary: " + baseSalary);
        System.out.println("Net Salary: " + calculateSalary());
    }
}

public class PayrollSystem {
    public static void main(String[] args) {
        Employee e1 = new Employee("E1", "Alice", 30000);
        Employee e2 = new Employee("E2", "Bob", 20000);

        // Mark attendance: Alice 25 days, Bob 20 days
        for (int i=1; i<=25; i++) e1.markAttendance(i, true);
        for (int i=1; i<=20; i++) e2.markAttendance(i, true);

        e1.generatePaySlip();
        e2.generatePaySlip();

        System.out.println("\nTotal Employees: " + Employee.totalEmployees);
        System.out.println("Company: " + Employee.companyName);
    }
}
