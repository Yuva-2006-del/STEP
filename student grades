// Assignment4_StudentGrades.java

class Student {
    String studentId;
    String studentName;
    double[] marks;   // marks in 3 subjects
    double gpa;

    static int totalStudents = 0;
    static String schoolName = "Green Valley School";

    Student(String id, String name) {
        studentId = id;
        studentName = name;
        marks = new double[3];
        totalStudents++;
    }

    void addMarks(double m1, double m2, double m3) {
        marks[0] = m1; marks[1] = m2; marks[2] = m3;
    }

    void calculateGPA() {
        double total = 0;
        for (double m : marks) total += m;
        double avg = total / marks.length;
        gpa = avg / 10; // simple GPA scale
    }

    void reportCard() {
        System.out.println("\nReport Card - " + studentName);
        System.out.println("Marks: " + marks[0] + ", " + marks[1] + ", " + marks[2]);
        System.out.println("GPA: " + gpa);
        System.out.println("Result: " + (gpa >= 4 ? "Pass" : "Fail"));
    }
}

public class StudentGrades {
    public static void main(String[] args) {
        Student s1 = new Student("S1", "Alice");
        Student s2 = new Student("S2", "Bob");

        s1.addMarks(80, 70, 90);
        s2.addMarks(40, 35, 50);

        s1.calculateGPA();
        s2.calculateGPA();

        s1.reportCard();
        s2.reportCard();

        System.out.println("\nTotal Students: " + Student.totalStudents);
        System.out.println("School: " + Student.schoolName);
    }
}
